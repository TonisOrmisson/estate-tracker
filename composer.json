{
    "name": "tonisormisson/estate-tracker",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "dev",
    "repositories": [
        {
            "type" : "composer",
            "url" : "https://packages.andmemasin.eu/"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }

    ],
    "prefer-stable":true,
    "require": {
        "php": ">=7.2.0",
        "ext-libxml": "*",

        "yiisoft/yii2": "~2.0.5",
        "yiisoft/yii2-bootstrap": "~2.0.0",
        "yiisoft/yii2-swiftmailer": "~2.0.0",
        "andmemasin/yii2-helpers": "dev-master",
        "tonisormisson/yii2-json-form": "^1.2.7",
        "kartik-v/yii2-widget-select2": "@dev",
        "kartik-v/yii2-widget-switchinput": "*",
        "miloschuman/yii2-highcharts-widget": "^5.0",
        "dmstr/yii2-adminlte-asset": "^2.1",
        "2amigos/yii2-usuario":"^1.5.0",
        "kartik-v/yii2-grid": "^3.3"
    },
    "require-dev": {
        "yiisoft/yii2-debug": "~2.0.0",
        "yiisoft/yii2-gii": "~2.0.0"

    },
    "config": {
        "process-timeout": 1800,
        "fxp-asset":{
            "enabled": false
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject",
            "cp -vip env-example.php env.php"
        ],
        "post-install-cmd":[
            "php yii migrate/up  --interactive=0",
            "cp -vip env-example.php env.php"
        ],
        "post-update-cmd":[
            "php yii migrate/up  --interactive=0",
            "cp -vip env-example.php env.php"
        ]

    },
    "autoload": {
        "psr-4": {
            "app\\": "src"
        }
    },

    "extra": {
        "branch-alias": {
            "dev-master": "1.2.0-dev"
        },
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "src/runtime": "0777",
                    "web/assets": "0777",
                    "yii": "0755"
                }
            ],
            "generateCookieValidationKey": [
                "src/config/web.php"
            ]
        }
    }
}
